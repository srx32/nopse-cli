{
  "name": "@srx32/nps-cli",
  "version": "1.0.5",
  "description": "A CLI tool that helps set up NodeJS projects",
  "main": "dist/app/index.js",
  "bin": {
    "nps": "dist/app/index.js"
  },
  "scripts": {
    "start": "node -r ts-node/register src/app/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "transpile-to-js": "npx tsc",
    "after-transpile": "npx copyfiles --all --up 1 \"src/templates/**/*\" --exclude \"src/templates/**/*-lock.json\" --exclude \"src/templates/**/node_modules/**/*\" dist",
    "build": "npm run transpile-to-js && npm run after-transpile",
    "serve": "npx .",
    "deploy": "npm run build && npm run serve"
  },
  "keywords": [
    "cli",
    "project",
    "setup",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "repository": "https://github.com/srx32/nps-cli",
  "homepage": "https://github.com/srx32/nps-cli#readme",
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.10",
    "@types/prompts": "^2.4.9",
    "copyfiles": "^2.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
